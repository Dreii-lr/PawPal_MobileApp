<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="PawPal"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/nunito_sans_extrabold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Smart Care for Best Friends"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/progress_active" />

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/progress_inactive" />

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:background="@drawable/progress_inactive" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Let's get started"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_sans_extrabold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll send a code to verify your email."
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <!-- Email Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:padding="16dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#C1C1F6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_logo" />

                <TextView
                    android:id="@+id/emailDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center|start"
                    android:text="Code sent to email@example.com"
                    android:textColor="#1F2937"
                    android:textSize="10sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Verification Code Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="VERIFICATION CODE"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Code Input -->
        <!-- Demo Code Hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="Use code 1234 for demo"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_bold"/>

        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Verify and Continue"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5B50D6"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"
            app:cornerRadius="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#E5E7EB" />

        <!-- Back to Sign In -->
        <TextView
            android:id="@+id/backToSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Back to Sign In"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"/>

    </LinearLayout>
</ScrollView>