<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="PawPal"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/nunito_sans_extrabold" />

        <TextView
            android:id="@+id/tvSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Smart Care for Best Friends"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/progress_complete" />

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/progress_active" />

            <View
                android:layout_width="115dp"
                android:layout_height="7dp"
                android:background="@drawable/progress_inactive" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Check your inbox"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/nunito_sans_extrabold" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="We have sent a verification link to the email address provided. Please click the link to verify your account."
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:fontFamily="@font/nunito_bold"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#F3F4F6"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logo"
                    app:tint="#5B50D6"/>

                <TextView
                    android:id="@+id/tvEmailDisplay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="email@example.com"
                    android:textColor="#1F2937"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did not receive the email? "
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_bold"/>

            <TextView
                android:id="@+id/tvResendLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend"
                android:textColor="#5B50D6"
                android:textSize="14sp"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenEmailApp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Open Email App"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5B50D6"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"
            app:cornerRadius="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#E5E7EB" />

        <TextView
            android:id="@+id/tvBackToSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Back to Sign In"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>
</ScrollView>