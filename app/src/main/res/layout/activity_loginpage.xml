<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_loginpage"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F4F6"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="PawPal"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:fontFamily="@font/nunito_sans_extrabold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Smart Care for Best Friends"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="EMAIL ADDRESS"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="PASSWORD"
            android:textColor="@color/gray"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tgPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@color/gray"
            app:endIconMode="password_toggle"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/passwordRulesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="4dp">

                    <TextView
                        android:id="@+id/ruleLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• At least 8 characters"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_bold"/>

                    <TextView
                        android:id="@+id/ruleCase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Mix of Uppercase &amp; Lowercase"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/ruleSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Contains a symbol (!, @, #, etc.)"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/ruleNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Contains a number"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_sans_extrabold"
            app:cornerRadius="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Don't have an account?"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:fontFamily="@font/nunito_bold"/>

        <TextView
            android:id="@+id/createAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create Account"
            android:textColor="#5B50D6"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_bold"/>
    </LinearLayout>
</RelativeLayout>